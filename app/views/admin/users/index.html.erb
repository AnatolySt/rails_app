<p id="notice"><%= notice %></p>

<h1>Список пользователей</h1>

<table class="table">
  <thead>
  <tr>
    <th>E-mail</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Показать', admin_user_path(user) %></td>
        <td><%= link_to 'Редактировать', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Удалить', admin_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

