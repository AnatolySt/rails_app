<h1>Список вагонов</h1>

<table class="table">
  <thead>
  <tr>
    <th>Номер</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @carriages.each do |carriage| %>
      <tr>
        <td><%= carriage.number %></td>
        <td><%= link_to 'Показать', admin_carriage_path(carriage) %></td>
        <td><%= link_to 'Редактировать', edit_admin_carriage_path(carriage) %></td>
        <td><%= link_to 'Удалить', admin_carriage_path(carriage), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
