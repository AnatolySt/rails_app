<tr>
  <td>
    <div id="train_title_<%= train.id %>">
      <%= train.number %>
    </div>
    <%= render 'name_edit', train: train, hidden: true %>
  </td>
  <td><%= link_to 'Показать', admin_train_path(train) %></td>
  <td><%= link_to 'Переименовать', '', class: 'edit_train_title', data: { train_id: train.id } %></td>
  <td><%= link_to 'Редактировать', edit_admin_train_path(train) %></td>
  <td><%= link_to 'Удалить', admin_train_path(train), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>