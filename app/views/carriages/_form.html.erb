<%= form_for [@train, @carriage] do |form| %>
    <%= render 'common/errors', resource: @carriage %>

    <div class="field">
      <%= form.label :type, "Тип вагона" %>
      <%= form.select :type, [['Плацкарт', 'EconomyCarriage'], ['Купе', 'CoupeCarriage'], ['Сидячий', 'SvCarriage']] %>
    </div>

    <div class="field">
      <%= form.label :top_seats, "Верхние места" %>
      <%= form.number_field :top_seats, id: :carriage_top_seats %>
    </div>

    <div class="field">
      <%= form.label :bottom_seats, "Нижние места" %>
      <%= form.number_field :bottom_seats, id: :carriage_bottom_seats %>
    </div>

    <div class="field">
      <%= form.label :side_top_seats, "Верхние боковые места" %>
      <%= form.number_field :side_top_seats, id: :carriage_side_top_seats %>
    </div>

    <div class="field">
      <%= form.label :side_bottom_seats, "Нижние боковые места" %>
      <%= form.number_field :side_bottom_seats, id: :carriage_side_bottom_seats %>
    </div>

    <div class="field">
      <%= form.label :down_seats, "Сидячие места" %>
      <%= form.number_field :down_seats, id: :carriage_down_seats %>
    </div>

    <div class="actions">
      <%= form.submit 'Отправить' %>
    </div>
<% end %>
