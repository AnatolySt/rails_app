<p id="notice"><%= notice %></p>

<h1>Список вагонов</h1>

<table>
  <thead>
  <tr>
    <th>Номер</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @carriages.each do |carriage| %>
      <tr>
        <td><%= carriage.number %></td>
        <td><%= link_to 'Показать', carriage_path(carriage) %></td>
        <td><%= link_to 'Редактировать', edit_carriage_path(carriage) %></td>
        <td><%= link_to 'Удалить', carriage_path(carriage), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

