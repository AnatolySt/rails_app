<h1>Список билетов</h1>

<table class="table">
  <thead>
  <tr>
    <th>ФИО</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <% if (current_user.id == ticket.user_id) %>
      <tr>
        <td><%= ticket.full_name %></td>
        <td><%= link_to 'Показать', ticket %></td>
        <td><%= link_to 'Редактировать', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Удалить', ticket, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
   <% end %>
  </tbody>
</table>
